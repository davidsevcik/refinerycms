<% content_for :body_content_title do %>
  <%= @categorization.name %>
<% end %>

<% content_for :body_content_left do %>
  
  <section>
    <h1>Name</h1>
<p>    <%=raw @categorization.name %>
</p>
  </section>
  
  <section>
    <h1>Code</h1>
<p>    <%=raw @categorization.code %>
</p>
  </section>
  
<% end %>

<% content_for :body_content_right do %>
<aside>
  <h2><%= t('.other') %></h2>
  <ul id="categorizations">
    <% @categorizations.each do |categorization| %>
      <li>
        <%= link_to categorization.name, categorization_url(categorization) %>
      </li>
    <% end %>
  </ul>
</aside>
<% end %>

<%= render :partial => "/shared/content_page" %>
