<li class='clearfix record <%= cycle("on", "on-hover") %>' id="<%= dom_id(categorization) -%>">
  <span class='title'>
    <%= categorization.name %>
    <span class="preview">&nbsp;</span>
  </span>
  <span class='actions'>
    <%= link_to refinery_icon_tag("application_go.png"), admin_categorization_categories_path(categorization),
        :title => t('.edit_categories'),
        :target => "_blank" %>
    <%= link_to refinery_icon_tag("application_edit.png"), edit_admin_categorization_path(categorization),
         :title => t('.edit') %>
    <%= link_to refinery_icon_tag("delete.png"), admin_categorization_path(categorization),
        :class => "cancel confirm-delete",
        :title => t('.delete'),
        :'data-confirm' => t('shared.admin.delete.message', :title => categorization.name),
        :'data-method' => :delete %>
  </span>
</li>
